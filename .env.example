# Configuración IMAP
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USER=tu.email@gmail.com
IMAP_PASSWORD=tu_app_password

# Configuración del servicio
CHECK_INTERVAL=300        # Verificar correos cada 5 minutos (300 segundos)
TIMEZONE=Europe/Madrid    # Zona horaria para eventos de calendario
OLLAMA_MODEL=llama3:8b-instruct-q4_K_M  # Modelo de Ollama a usar

# Configuración de logging (opcional)
LOG_LEVEL=INFO

OLLAMA_ENDPOINT=http://nombre-contenedor-ollama:11434/api/generate
